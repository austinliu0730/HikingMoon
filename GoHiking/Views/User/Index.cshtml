@model IEnumerable<GoHiking.data.User>

@{
    ViewBag.Title = "使用者管理";
}

<div class="section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-md-12">
                <div class="p-4 p-md-5 shadow rounded" style="background: white;">

                    <!-- 標題與新增按鈕 -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="heading mb-0" style="color: #2c3e50; font-weight: 600;">
                            <i class="fas fa-users-cog me-2 text-primary"></i>使用者列表
                        </h2>
                        @Html.ActionLink("建立新帳號", "Create", "User", null, new { @class = "btn btn-success", style = "border-radius: 50px; padding: 8px 20px;" })
                    </div>

                    <!-- 表格容器 -->
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col" style="width: 40%;">
                                        @Html.DisplayNameFor(model => model.UserName)
                                    </th>
                                    <th scope="col" style="width: 30%;">
                                        @Html.DisplayNameFor(model => model.Password)
                                    </th>
                                    <th scope="col" class="text-center" style="width: 30%;">操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@Html.DisplayFor(modelItem => item.UserName)</strong>
                                        </td>
                                        <td>

                                            <span class="text-muted" style="font-family: monospace; font-size: 0.9em;">@Html.DisplayFor(modelItem => item.Password)</span>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                @Html.ActionLink(" 修改", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-primary", style = "color: black;" })
                                                @Html.ActionLink(" 刪除", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-danger", style = "color: black;", onclick = "return confirm('確定要刪除使用者 " + item.UserName + " 嗎?');" })
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section HeroSection {
    <div class="img-bg rellax ">
        <img src="/images/hero_1.jpg" alt="Image" class="img-fluid">
    </div>
}