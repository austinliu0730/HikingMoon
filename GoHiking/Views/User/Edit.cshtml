@model GoHiking.data.User

@{
    ViewBag.Title = "修改資料";
}

<div class="section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="login-card p-5 shadow rounded mt-5" style="background: white;">

                    <div class="text-center mb-4">
                        <div class="mb-3">
                            <i class="fas fa-user-edit fa-3x text-primary mb-3"></i>
                        </div>
                        <h2 class="heading mb-2" style="color: #2c3e50; font-weight: 600;">修改帳號資料</h2>
                        <p class="text-muted" style="font-size: 16px;">請在此更新您的個人資訊</p>
                        <hr style="width: 60px; height: 3px; background: linear-gradient(45deg, #17a2b8, #20c997); border: none; margin: 20px auto;">
                    </div>

                    @using (Html.BeginForm("Edit", "User", FormMethod.Post, new { @class = "default-form", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Id)

                        <div class="form-group mb-4">
                            <label for="UserName" class="form-label" style="font-weight: 500; color: #495057;">
                                <i class="fas fa-user me-2 text-primary"></i>使用者名稱
                            </label>
                            @Html.EditorFor(model => model.UserName, new
                        {
                           htmlAttributes = new
                           {
                               @class = "form-control form-control-lg",
                               placeholder = "請輸入您的使用者名稱",
                               style = "border: 2px solid #e9ecef; border-radius: 10px; padding: 12px 16px; transition: all 0.3s ease;",
                               onfocus = "this.style.borderColor='#17a2b8'; this.style.boxShadow='0 0 0 0.2rem rgba(23, 162, 184, 0.25)'",
                               onblur = "this.style.borderColor='#e9ecef'; this.style.boxShadow='none'"
                           }
                        })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger small mt-1" })
                        </div>

                        <!-- Email -->
                        <div class="form-group mb-4">
                            <label for="Email" class="form-label" style="font-weight: 500; color: #495057;">
                                <i class="fas fa-envelope me-2 text-primary"></i>Email
                            </label>
                            @Html.EditorFor(model => model.Email, new
                            {
                                htmlAttributes = new
                                {
                                    @class = "form-control form-control-lg",
                                    placeholder = "請輸入您的電子郵件",
                                    type = "email",
                                    style = "border: 2px solid #e9ecef; border-radius: 10px; padding: 12px 16px; transition: all 0.3s ease;",
                                    onfocus = "this.style.borderColor='#17a2b8'; this.style.boxShadow='0 0 0 0.2rem rgba(23, 162, 184, 0.25)'",
                                    onblur = "this.style.borderColor='#e9ecef'; this.style.boxShadow='none'"
                                }
                            })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small mt-1" })
                        </div>



                        <div class="form-group mb-4">
                            <label for="Password" class="form-label" style="font-weight: 500; color: #495057;">
                                <i class="fas fa-lock me-2 text-primary"></i>新密碼 (若不變更請留白)
                            </label>
                            @Html.EditorFor(model => model.Password, new
                        {
                           htmlAttributes = new
                           {
                               @class = "form-control form-control-lg",
                               placeholder = "輸入新密碼以進行更新",
                               style = "border: 2px solid #e9ecef; border-radius: 10px; padding: 12px 16px; transition: all 0.3s ease;",
                               onfocus = "this.style.borderColor='#17a2b8'; this.style.boxShadow='0 0 0 0.2rem rgba(23, 162, 184, 0.25)'",
                               onblur = "this.style.borderColor='#e9ecef'; this.style.boxShadow='none'"
                           }
                        })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small mt-1" })
                        </div>

                        <div class="padding-top-20">
                            <button type="submit"
                                    class="btn btn-info btn-lg w-100 mb-3"
                                    style="background: linear-gradient(45deg, #17a2b8, #20c997); border: none; border-radius: 10px; padding: 12px; font-weight: 600; font-size: 16px; transition: all 0.3s ease;"
                                    onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 8px 20px rgba(23, 162, 184, 0.3)'"
                                    onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='none'">
                                <i class="fas fa-save me-2"></i>儲存變更
                            </button>

                            <div class="text-center">
                                <small class="text-muted">
                                    @Html.ActionLink("返回列表", "Index", null, new { @class = "text-decoration-none", style = "color: #17a2b8; font-weight: 500;" })
                                </small>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section HeroSection {
    <div class="img-bg rellax ">
        <img src="/images/hero_1.jpg" alt="Image" class="img-fluid">
    </div>
}