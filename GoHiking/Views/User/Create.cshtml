@model GoHiking.ViewModels.UserViewModel
@{
    ViewBag.Title = "Create";
}

<div class="section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="login-card p-5 shadow rounded mt-5" style="background: white;">
                    <!-- 標題 -->
                    <div class="text-center mb-4">
                        <div class="mb-3">
                            <i class="fas fa-user-plus fa-3x text-success mb-3"></i>
                        </div>
                        <h2 class="heading mb-2" style="color: #2c3e50; font-weight: 600;">建立新帳號</h2>
                        <p class="text-muted" style="font-size: 16px;">加入 GoHiking，開始您的登山之旅</p>
                        <hr style="width: 60px; height: 3px; background: linear-gradient(45deg, #28a745, #20c997); border: none; margin: 20px auto;">
                    </div>

                    <!-- 歡迎訊息 -->
                    <div class="alert alert-info border-0 mb-4" style="background: linear-gradient(135deg, #e3f2fd, #f8f9ff); border-left: 4px solid #2196f3 !important;">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-mountain text-primary me-3" style="font-size: 1.5em;"></i>
                            <div>
                                <strong>歡迎加入登山愛好者行列！</strong><br>
                                <small class="text-muted">建立帳號後，您可以與其他山友一起出發。</small>
                            </div>
                        </div>
                    </div>

                    <!-- 註冊表單 -->
                    <form action="/User/Create" method="post" class="default-form" role="form">
                        <div class="form-group mb-4">
                            <label for="name" class="form-label" style="font-weight: 500; color: #495057;">
                                <i class="fas fa-user me-2 text-primary"></i>使用者名稱
                                <span class="require" style="color:#dc3545">*</span>
                            </label>
                            <input type="text"
                                   class="form-control form-control-lg"
                                   id="name"
                                   name="username"
                                   placeholder="請輸入您的使用者名稱"
                                   style="border: 2px solid #e9ecef; border-radius: 10px; padding: 12px 16px; transition: all 0.3s ease;"
                                   onfocus="this.style.borderColor='#28a745'; this.style.boxShadow='0 0 0 0.2rem rgba(40, 167, 69, 0.25)'"
                                   onblur="this.style.borderColor='#e9ecef'; this.style.boxShadow='none'">
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger small mt-1" })
                        </div>

                        <div class="form-group mb-4">
                            <label for="password" class="form-label" style="font-weight: 500; color: #495057;">
                                <i class="fas fa-lock me-2 text-primary"></i>密碼
                                <span class="require" style="color:#dc3545">*</span>
                            </label>
                            <div class="input-group" style="border: 2px solid #e9ecef; border-radius: 10px; overflow: hidden;">
                                <input type="password"
                                       class="form-control form-control-lg border-0"
                                       id="password"
                                       name="password"
                                       placeholder="請輸入安全密碼"
                                       style="padding: 12px 16px; box-shadow: none;"
                                       onfocus="this.parentNode.style.borderColor='#28a745'; this.parentNode.style.boxShadow='0 0 0 0.2rem rgba(40, 167, 69, 0.25)'"
                                       onblur="this.parentNode.style.borderColor='#e9ecef'; this.parentNode.style.boxShadow='none'">
                                <button class="btn btn-outline-secondary border-0" type="button" id="togglePassword"
                                        style="background: none; padding: 0 15px;"
                                        onclick="togglePasswordVisibility()">
                                    <i class="fas fa-eye" id="passwordIcon"></i>
                                </button>
                            </div>
                            <small class="text-muted mt-1">
                                <i class="fas fa-info-circle me-1"></i>密碼至少需要6個字符，建議包含數字和特殊字符
                            </small>
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small mt-1" })
                        </div>

                        <div class="form-group mb-4">
                            <label for="ConfirmPassword" class="form-label" style="font-weight: 500; color: #495057;">
                                <i class="fas fa-lock me-2 text-primary"></i>確認密碼
                                <span class="require" style="color:#dc3545">*</span>
                            </label>


                            <div class="input-group" style="border: 2px solid #e9ecef; border-radius: 10px; overflow: hidden;">
                                @Html.PasswordFor(m => m.ConfirmPassword, new
                                {
                                    @class = "form-control form-control-lg border-0",
                                    placeholder = "請再次輸入密碼",
                                    style = "padding: 12px 16px; box-shadow: none;",
                                    onfocus = "this.parentNode.style.borderColor='#28a745'; this.parentNode.style.boxShadow='0 0 0 0.2rem rgba(40, 167, 69, 0.25)'",
                                    onblur = "this.parentNode.style.borderColor='#e9ecef'; this.parentNode.style.boxShadow='none'"
                                })
                                <button class="btn btn-outline-secondary border-0" type="button" id="toggleConfirmPassword"
                                        style="background: none; padding: 0 15px;"
                                        onclick="toggleConfirmPasswordVisibility()">
                                    <i class="fas fa-eye" id="confirmPasswordIcon"></i>
                                </button>
                            </div>

                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger small mt-1" })
                        </div>

                        <div class="form-group mb-4">
                            <label for="Email" class="form-label" style="font-weight: 500; color: #495057;">
                                <i class="fas fa-lock me-2 text-primary"></i>Email
                                <span class="require" style="color:#dc3545">*</span>
                            </label>
                            <div class="input-group" style="border: 2px solid #e9ecef; border-radius: 10px; overflow: hidden;">
                                <input type="Email"
                                       class="form-control form-control-lg border-0"
                                       id="Email"
                                       name="Email"
                                       placeholder="請輸入信箱"
                                       style="padding: 12px 16px; box-shadow: none;"
                                       onfocus="this.parentNode.style.borderColor='#28a745'; this.parentNode.style.boxShadow='0 0 0 0.2rem rgba(40, 167, 69, 0.25)'"
                                       onblur="this.parentNode.style.borderColor='#e9ecef'; this.parentNode.style.boxShadow='none'">
                                <button class="btn btn-outline-secondary border-0" type="button" id="toggleEmail"
                                        style="background: none; padding: 0 15px;"
                                        onclick="toggleEmailVisibility()">
                                    <i class="fas fa-eye" id="EmailIcon"></i>
                                </button>
                            </div>
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small mt-1" })
                        </div>

                        <div class="padding-top-20">
                            <button type="submit"
                                    class="btn btn-success btn-lg w-100 mb-3"
                                    style="background: linear-gradient(45deg, #28a745, #20c997); border: none; border-radius: 10px; padding: 12px; font-weight: 600; font-size: 16px; transition: all 0.3s ease;"
                                    onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 8px 20px rgba(40, 167, 69, 0.3)'"
                                    onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='none'">
                                <i class="fas fa-user-plus me-2"></i>建立帳號
                            </button>

                            <div class="text-center">
                                <small class="text-muted">
                                    已經有帳號了？
                                    <a href="/User/Login" class="text-decoration-none" style="color: #28a745; font-weight: 500;">
                                        立即登入 <i class="fas fa-arrow-right ms-1"></i>
                                    </a>
                                </small>
                            </div>
                        </div>
                    </form>

                    <!-- 底部裝飾 -->
                    <div class="text-center mt-4">
                        <div class="d-flex justify-content-center align-items-center text-muted">
                            <i class="fas fa-mountain me-2"></i>
                            <small>隨時啟程 • 征服高山</small>
                            <i class="fas fa-mountain ms-2"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section MyJS{

    @if (TempData["AccountCreated"] != null)
    {
        <!-- 成功建立帳號的 Modal -->
        <div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content" style="border-radius: 15px; border: none;">
                    <div class="modal-body text-center p-5">
                        <div class="mb-4">
                            <i class="fas fa-check-circle text-success" style="font-size: 4em;"></i>
                        </div>
                        <h4 class="text-success mb-3">帳號建立成功！</h4>
                        <p class="text-muted mb-4">歡迎加入 GoHiking 社群<br>請使用您的新帳號登入開始探索</p>
                        <button type="button" class="btn btn-success btn-lg" data-bs-dismiss="modal" style="border-radius: 10px; padding: 10px 30px;">
                            <i class="fas fa-sign-in-alt me-2"></i>立即登入
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <script>
            $(() => { $('#successModal').modal('show'); });

        </script>
    }

}



@section HeroSection {
    <div class="img-bg rellax ">
        <img src="/images/hero_1.jpg" alt="Image" class="img-fluid">
    </div>

}