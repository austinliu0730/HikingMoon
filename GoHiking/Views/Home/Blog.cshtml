@model List<GoHiking.data.MountainTrail>

@{
    ViewBag.Title = "Blog";
}

@section MyCSS{
    <link href="~/css/mycss/product.css?v=@DateTime.Now.Ticks" rel="stylesheet" />
}

<div class="product-page-container">
    <aside class="sidebar d-none d-lg-block">
        <h3 class="sidebar-title">活動總覽</h3>
        <p class="sidebar-subtitle">ACTIVITY</p>
        <ul class="activity-list">
            <li><a href="#">所有活動</a></li>
            <li class="active"><a href="#">單日行程｜山林體驗</a></li>
            <li><a href="#">兩日行程｜深入荒野</a></li>
            <li><a href="#">三日行程｜拾回自然</a></li>
            <li><a href="#">四日以上｜浪漫忘返</a></li>
            <li><a href="#">訓練課程 x 講座</a></li>
            <li><a href="#">攀岩、溯溪、體驗</a></li>
            <li><a href="#">海外活動</a></li>
        </ul>

        <div class="filter-section">
            <h4>篩選條件</h4>
            <div class="filter-options">
                <div>
                    <label>
                        <input type="checkbox" id="upcoming" value="upcoming"> 即將開團
                    </label>
                </div>
                <div>
                    <label>
                        <input type="checkbox" id="price-priority" value="price"> 費用優先
                    </label>
                </div>
                <div>
                    <label>
                        <input type="checkbox" id="duration" value="duration"> 爬山天數
                    </label>
                </div>
            </div>
            <button id="apply-filters" class="btn btn-primary mt-3">套用篩選</button>
        </div>
    </aside>

    <main class="main-content">
        <div class="section">
            <div class="container">

                <div class="row">
                    @foreach (var trail in Model)
                    {
                        <div class="col-6 col-lg-4 mb-4" data-aos="fade-up" data-aos-delay="@((Model.IndexOf(trail) + 1) * 100)">
                            <div class="media-entry">
                                <a href="@Url.Action("Details", new { id = trail.ID })">
                                    <img src="~/images/mountain-placeholder.jpg" alt="@trail.mt_name" class="img-fluid">
                                </a>
                                <div class="bg-white m-body">
                                    <span class="date">@trail.region</span>
                                    <h3><a href="@Url.Action("Details", new { id = trail.ID })">@trail.mt_name</a></h3>
                                    <p>
                                        位置：@trail.location<br>
                                        難度：@trail.diff 級<br>
                                        距離：@trail.dist_km km<br>
                                        預計時間：@(trail.time_min / 60)小時@(trail.time_min % 60)分鐘
                                    </p>
                                    <div class="trail-info">
                                        <small class="text-muted">
                                            @if (trail.park_permit == 1)
                                            {
                                                <span class="badge bg-warning text-dark me-1">需入園證</span>
                                            }
                                            @if (trail.mt_permit == 1)
                                            {
                                                <span class="badge bg-danger me-1">需入山證</span>
                                            }
                                            <span class="badge bg-info">@trail.badge</span>
                                        </small>
                                    </div>
                                    <a href="@Url.Action("Details", new { id = trail.ID })" class="more d-flex align-items-center float-start mt-2">
                                        <span class="label">查看詳情</span>
                                        <span class="arrow"><span class="icon-keyboard_arrow_right"></span></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <nav class="mt-5" aria-label="Page navigation example" data-aos="fade-up" data-aos-delay="100">
                    <ul class="custom-pagination pagination">
                        <li class="page-item prev"><a class="page-link" href="#">Previous</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item next"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>

        </div>
    </main>
</div>

@section HeroSection {
    <div class="img-bg rellax">
        <img src="/images/hero_2.jpg" alt="Image" class="img-fluid">
    </div>
    <div class="container">
        <div class="row align-items-center justify-content-start">
            <div class="col-lg-6 mx-auto text-center">

                <h1 class="heading" data-aos="fade-up">Blog</h1>
                <p class="mb-4" data-aos="fade-up">A small river named Duden flows by their place and supplies it with the necessary regelialia. It is a paradisematic country, in which roasted parts of sentences fly into your mouth.</p>

            </div>
        </div>
    </div>

}
